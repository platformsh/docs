{
  "name": "platformsh-docs",
  "version": "1.0.0",
  "description": "This repository holds the public user documentation for [Platform.sh](https://platform.sh/).",
  "main": "gulpfile.js",
  "author": "Platform.sh",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/platformsh/platformsh-docs.git"
  },
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/platformsh/platformsh-docs/issues"
  },
  "homepage": "https://github.com/platformsh/platformsh-docs#readme",
  "scripts": {
    "hugo-watch-dev": "hugo server --watch --verbose --buildDrafts --cleanDestinationDir --disableFastRender",
    "hugo-watch-prod": "./hugo",
    "fetch-files": "rm -rf static/files/fetch/* && node static/scripts/fetch.js",
    "fetch-templates": "node static/scripts/fetch-templates.js",
    "registry-files": "node static/scripts/updateExampleConfigFiles.js",
    "dev": "npm run fetch-files && npm run fetch-templates && npm run registry-files && npm run hugo-watch-dev",
    "prod": "npm run fetch-files && npm run fetch-templates && npm run registry-files && npm run scss-build"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.3",
    "platformsh-user-widget": "1.0.49",
    "pshregistry-parser": "1.1.1"
  },
  "dependencies": {
    "async": "^3.1.0",
    "gulp": "^4.0.2",
    "hugo-algolia": "^1.2.14",
    "request": "^2.88.2",
    "request-promise": "^4.2.5",
    "yaml-include": "^1.2.1"
  }
}
